# ðŸŽ¯ Replit Configuration for Data Science MiniCourse
# This makes your repository work perfectly in Replit!

language = "python3"
run = "python 1_python_fundamentals/1_python_fundamentals.py"

[nix]
channel = "stable-22_11"

[deployment]
run = ["sh", "-c", "python 1_python_fundamentals/1_python_fundamentals.py"]

[languages]

[languages.python3]
pattern = "**/*.py"

[languages.python3.languageServer]
start = "pylsp"

# ðŸš€ Quick commands learners can use
[interpreter]
command = [
  "prybar-python3", 
  "-q", 
  "--ps1", 
  "ðŸ§ª Data Science â†’ ", 
  "-i"
]

[env]
VIRTUAL_ENV = "/home/runner/${REPL_SLUG}/venv"
PATH = "${VIRTUAL_ENV}/bin"
PYTHONPATH = "${VIRTUAL_ENV}/lib/python3.10/site-packages"
REPLIT_POETRY_PYPI_REPOSITORY = "https://package-proxy.replit.com/pypi/"
MPLBACKEND = "Agg"
REPLIT_DB_URL = "${REPLIT_DB_URL}"

# ðŸŽ¨ Custom shell configuration  
[gitHubImport]
requiredFiles = [".replit", "pyproject.toml"]
